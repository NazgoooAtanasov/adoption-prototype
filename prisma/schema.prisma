// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Animal {
    id          String      @id @default(uuid())
    name        String
    description String
    gender      String
    type        String
    age         Int
    status      String
    location    String
    images      String[]
}

model User {
    id          String      @id @default(uuid())
    email       String
    password    String
    role        Role

    firstname   String?
    lastname    String?
    orgname     String?
}

enum Role {
    USER
    ORGANIZATION
}
